{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Quix" : "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Literate, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:yy-MM-dd HH:mm:ss.fff} {Level:u3}] {SourceContext:l}: {Message:lj}{NewLine}{Exception}",
          "applyThemeToRedirectedOutput": true
        }
      }
    ]
  },
  "Quix": {
    "Workspace": {
      "Id": "quixdev-peterbench"
    },
    "Deployment": {
      "Limits": {
        "Memory": 1000 // placeholder
      }
    },
  },
  "Snowflake": {
    "Locator": "",
    "Region": "west-europe.azure",
    "User": "",
    "Password": "",
    "Database": "",
    "BatchSize": 30000
  },
  "Broker": {
    "TopicName": "f1-data",
    "CommitAfterEveryCount": 20000,
    "CommitAfterMs": 60000,
    "Properties": {
      "fetch.wait.max.ms": "1000",
      "fetch.min.bytes": "50",
      "socket.timeout.ms": "10000",
      "topic.metadata.refresh.interval.ms": "30000",
      "queued.max.messages.kbytes": "10240",
      "fetch.message.max.bytes": "10240"
    }
  },
  "MemoryPercentLeftForProcess": 20
}